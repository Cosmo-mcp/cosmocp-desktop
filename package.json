{
  "name": "CosmoStudio",
  "productName": "CosmoStudio",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": ".vite/build/main.js",
  "workspaces": [
    "packages/*",
    "src/renderer"
  ],
  "scripts": {
    "generate-api": "ts-node -r tsconfig-paths/register scripts/generate-api.ts",
    "next:dev": "cd src/renderer && npm run dev",
    "dev": "concurrently -k \"npm run next:dev\" \"npm run start\"",
    "start": "cross-env NODE_ENV=development electron-forge start",
    "package": "cd src/renderer && npm run build && cd ../.. && cross-env NODE_ENV=production && electron-forge package",
    "make": "cd src/renderer && npm run build && cd ../.. && cross-env NODE_ENV=production && electron-forge make",
    "publish": "cd src/renderer && npm run build && cd ../.. && cross-env NODE_ENV=production && electron-forge publish",
    "lint": "gts lint",
    "fix": "gts fix",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "db:pull": "drizzle-kit pull",
    "db:check": "drizzle-kit check",
    "db:up": "drizzle-kit up"
  },
  "keywords": [],
  "author": {
    "name": "Cosmo-cp",
    "email": "gaurav@cosmocp.com"
  },
  "license": "AGPL",
  "private": true,
  "devDependencies": {
    "@electron-forge/cli": "^7.9.0",
    "@electron-forge/maker-deb": "^7.9.0",
    "@electron-forge/maker-rpm": "^7.9.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.9.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.9.0",
    "@electron-forge/plugin-fuses": "^7.9.0",
    "@electron-forge/plugin-vite": "^7.9.0",
    "@electron-forge/publisher-github": "^7.9.0",
    "@electron/fuses": "^1.8.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.5",
    "electron": "^38.2.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "gts": "^6.0.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "2.0.44",
    "@ai-sdk/google": "2.0.17",
    "@ai-sdk/openai": "2.0.66",
    "@electric-sql/pglite": "0.3.10",
    "@stepperize/react": "^5.1.9",
    "ai": "5.0.60",
    "dotenv": "17.2.3",
    "drizzle-orm": "0.44.6",
    "drizzle-zod": "^0.8.3",
    "electron-squirrel-startup": "1.0.1",
    "inversify": "7.10.2",
    "ollama-ai-provider-v2": "1.5.5",
    "reflect-metadata": "0.2.2",
    "update-electron-app": "^3.1.2",
    "zod": "4.1.12"
  }
}
